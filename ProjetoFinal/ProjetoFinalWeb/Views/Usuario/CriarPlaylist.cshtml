@model ProjetoFinalWeb.Models.PlaylistModel

@{
    ViewBag.Title = "Criar Playlist";
}

<h2>Criar Playlist</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Criar Playlist</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Publica, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    <span class="glyphicon glyphicon-check" > Publica</span>
                    @Html.RadioButtonFor(Model => Model.Publica ,true, false)
                     <span class="glyphicon glyphicon-check"> Privada</span>
                    @Html.RadioButtonFor(model => Model.Publica,false, false)
                    @Html.ValidationMessageFor(model => model.Publica, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ver Suas Playlists", "Index")
    <br />
    <br />
    <a href="/Home/Index">Voltar para o Menu</a>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
