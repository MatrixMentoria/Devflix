<div class="jumbotron" style="border-style:none;">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:1000px; height:530px">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox" style="color:darkgray">
           
             <div class="item active">
                <img src="http://pipocaenanquim.com.br/wp-content/uploads/2016/06/capitao-america-guerra-civil-x12y190917.jpg" alt="Capitão América - Guerra Civil" style="width:1000px;height:530px;">

            </div>
            <div class="item">
                <img src="http://www.crossmap.com/uploads/images/2/81/28112.jpg" alt="Star Trek Beyond" style="width:1000px;height:530px;">

            </div>

            <div class="item">
                <img src="http://cdn.cinepop.com.br/2016/01/esquadraosuicida-750x380.jpg" alt="Esquadrão Suicida" style="width:1000px;height:530px;">

            </div>

            <div class="item">
                <img src="https://queenpandaurore.files.wordpress.com/2016/02/deadpool-guide-des-personnages-film_cover.jpg?w=960" alt="Deadpool" style="width:1000px;height:530px;">

            </div>

            <div class="item">
                <img src="http://comose-llama.com/wp-content/uploads/2016/03/Como-se-llama-Star-Wars-7.jpg" alt="Star Wars The Force Awakens" style="width:1000px;height:530px;">

            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
